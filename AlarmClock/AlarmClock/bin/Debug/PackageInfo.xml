<?xml version="1.0" encoding="utf-8" ?>
<Package xmlns="http://schemas.myconstellation.io/Constellation/1.8/PackageManifest"
         Name="AlarmClock"
         Version="2.0.2"
         Author="TeamReveil"
         Description="Wake up !"
         RequestLastStateObjectsOnStart ="true"
         EnableControlHub="true">
  <Compatibility constellationVersion="1.8" dotNetTargetPlatform="net45">
    <Platforms>
      <Platform id="Win32NT" isCompliant="true" />
      <Platform id="Unix" isCompliant="true" />
    </Platforms>
  </Compatibility>
  <Settings>
    <Setting name="snooze" isRequired="false" defaultValue="3" type="Int32" description="Time you want to snooze alarm" />
  </Settings>
</Package>